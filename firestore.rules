rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all matches under artifacts/{appId}/public/data/matches
    match /artifacts/{appId}/public/data/matches/{matchId} {
      // Anyone can read public matches
      allow read: if true;
      
      // Only authenticated users can write/update matches
      // You can make this more restrictive based on your needs
      allow write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
